<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient"
    android:fillViewport="true"
    android:padding="24dp"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:showDividers="none"
        android:dividerPadding="0dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_panel_surface"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_baseline_directions_car_24"
                android:tint="@color/neonCyan"
                android:contentDescription="Robot rover icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task 1 Command Deck"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guide your autonomous car through the arena"
                    android:textColor="@color/textSecondary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Top Section: Grid + Right Panel -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/panelDark"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/panelStroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- GridMap -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_panel_surface"
                    android:padding="12dp">

                    <com.example.androidcontroller.GridMap
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        tools:ignore="MissingConstraints" />
                </FrameLayout>

                <!-- Right Column (Robot Status + Obstacle Info + Buttons) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="space_between"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="8dp">

                    <!-- Robot Status -->
                    <TextView
                        android:id="@+id/robotStatusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_info_chip"
                        android:text="Robot Status"
                        android:textAllCaps="true"
                        android:textColor="@color/textPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/robotStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Not Available"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_timeTaken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Time:"
                        android:textColor="@color/textSecondary"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <!-- Obstacle Section -->
                    <TextView
                        android:id="@+id/obstacleListTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Obstacles"
                        android:textColor="@color/neonCyan"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_panel_surface"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="4dp"
                            android:text="X:"
                            android:textColor="@color/textSecondary" />

                        <EditText
                            android:id="@+id/add_obs_x_value"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/panelStroke"
                            android:inputType="number"
                            android:padding="6dp"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:paddingEnd="4dp"
                            android:text="Y:"
                            android:textColor="@color/textSecondary" />

                        <EditText
                            android:id="@+id/add_obs_y_value"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/panelStroke"
                            android:inputType="number"
                            android:padding="6dp"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textSecondary" />
                    </LinearLayout>

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btnSendInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_button"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_baseline_send_24"
                            android:drawableTint="@color/textPrimary"
                            android:letterSpacing="0.05"
                            android:text="Send Arena"
                            android:textAllCaps="false"
                            android:textColor="@color/textPrimary"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/add_obs_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_button"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_baseline_add_24"
                            android:drawableTint="@color/textPrimary"
                            android:letterSpacing="0.05"
                            android:text="Add Obstacle"
                            android:textAllCaps="false"
                            android:textColor="@color/textPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Obstacle List -->
                    <ListView
                        android:id="@+id/home_obstacles_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp"
                        android:divider="@color/panelStroke"
                        android:dividerHeight="1dp"
                        android:listSelector="@android:color/transparent" />

                    <!-- Control Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnResetArena"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="4dp"
                            android:background="@drawable/rounded_button"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_baseline_refresh_24"
                            android:drawableTint="@color/textPrimary"
                            android:letterSpacing="0.05"
                            android:text="Reset Arena"
                            android:textAllCaps="false"
                            android:textColor="@color/textPrimary"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btnSetObstacle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="4dp"
                            android:background="@drawable/rounded_button"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_baseline_gps_fixed_24"
                            android:drawableTint="@color/textPrimary"
                            android:letterSpacing="0.05"
                            android:text="Set Obstacle"
                            android:textAllCaps="false"
                            android:textColor="@color/textPrimary"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btnDirectionFacing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="4dp"
                            android:background="@drawable/rounded_button"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_baseline_text_rotation_angleup_24"
                            android:drawableTint="@color/textPrimary"
                            android:letterSpacing="0.05"
                            android:text="Set Facing"
                            android:textAllCaps="false"
                            android:textColor="@color/textPrimary"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btnPlaceRobot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="4dp"
                            android:background="@drawable/rounded_button"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_baseline_directions_car_24"
                            android:drawableTint="@color/textPrimary"
                            android:letterSpacing="0.05"
                            android:text="Place Robot"
                            android:textAllCaps="false"
                            android:textColor="@color/textPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Section (Manual Control, Robot Info, etc.) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/panelDark"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/panelStroke"
            app:strokeWidth="1dp">

            <include layout="@layout/fragment_home_bottom_controls" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
