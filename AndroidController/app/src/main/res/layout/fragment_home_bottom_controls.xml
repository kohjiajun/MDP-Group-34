<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/manualControlTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Robot Controls"
        android:textColor="@color/neonCyan"
        android:textStyle="bold"
        android:textSize="16sp"
        android:letterSpacing="0.08"
        android:layout_marginBottom="12dp" />

    <!-- Two-column layout for left (controls/info) + right (switches/start) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- LEFT COLUMN -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Arrow Controls -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_panel_surface"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/upArrowBtn"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_directional_button"
                    android:contentDescription="Up"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_up"
                    android:tint="@color/neonCyan" />

                <ImageButton
                    android:id="@+id/leftArrowBtn"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bg_directional_button"
                    android:contentDescription="Left"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_left"
                    android:tint="@color/neonCyan" />

                <ImageButton
                    android:id="@+id/rightArrowBtn"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_directional_button"
                    android:contentDescription="Right"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/neonCyan" />

                <ImageButton
                    android:id="@+id/downArrowBtn"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_directional_button"
                    android:contentDescription="Down"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/neonCyan" />
            </RelativeLayout>

            <!-- Robot Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_panel_surface"
                android:padding="12dp">

                <TextView
                    android:id="@+id/robot_x_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X: --"
                    android:textColor="@color/textSecondary" />

                <TextView
                    android:id="@+id/robot_y_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y: --"
                    android:textColor="@color/textSecondary" />

                <TextView
                    android:id="@+id/robotDirText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facing: --"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>
        </LinearLayout>

        <!-- RIGHT COLUMN -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:gravity="center_horizontal">

            <!-- Switches -->
            <Switch
                android:id="@+id/switch_manualMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Manual Mode"
                android:textColor="@color/textPrimary"
                android:thumbTint="@color/neonCyan"
                android:trackTint="@color/panelStroke" />

            <Switch
                android:id="@+id/switch_outdoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Outdoor Arena"
                android:textColor="@color/textPrimary"
                android:thumbTint="@color/neonCyan"
                android:trackTint="@color/panelStroke" />

            <Switch
                android:id="@+id/switch_turnmode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Big Turn"
                android:textColor="@color/textPrimary"
                android:thumbTint="@color/neonCyan"
                android:trackTint="@color/panelStroke" />

            <!-- Start Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnStartFastestCar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/rounded_button"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_baseline_timer_24"
                    android:drawableTint="@color/textPrimary"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:minHeight="48dp"
                    android:paddingVertical="10dp"
                    android:text="Start Fastest Car"
                    android:textAllCaps="false"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnStartImageRec"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/rounded_button"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_baseline_image_search_24"
                    android:drawableTint="@color/textPrimary"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:minHeight="48dp"
                    android:paddingVertical="10dp"
                    android:text="Start Image Rec"
                    android:textAllCaps="false"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
