<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/home_obs_listitem_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/bg_list_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Obstacle icon"
            android:tint="@color/neonCyan"
            app:srcCompat="@drawable/ic_baseline_gps_fixed_24" />

        <TextView
            android:id="@+id/txtObsListItem_obsNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#1"
            android:textColor="@color/neonAmber"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtObsListItem_xTxtView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="X:"
            android:textColor="@color/textSecondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtObsListItem_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/txtObsListItem_yTxtView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Y:"
            android:textColor="@color/textSecondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtObsListItem_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/txtObsListItem_dirTxtView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="Facing:"
            android:textColor="@color/textSecondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtObsListItem_dir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="@color/textPrimary" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
