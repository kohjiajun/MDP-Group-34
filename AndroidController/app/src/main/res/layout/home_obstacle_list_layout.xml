<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/home_obs_listitem_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@drawable/bg_list_item"
        android:orientation="vertical"
        android:padding="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Obstacle icon"
                android:tint="@color/neonCyan"
                app:srcCompat="@drawable/ic_baseline_gps_fixed_24" />

            <TextView
                android:id="@+id/txtObsListItem_obsNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="#01"
                android:textColor="@color/neonAmber"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtObsListItem_dirTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:letterSpacing="0.12"
                android:text="FACING"
                android:textAllCaps="true"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtObsListItem_dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_obstacle_value"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                android:minWidth="64dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="N"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtObsListItem_xTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="X"
                android:textAllCaps="true"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtObsListItem_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_obstacle_value"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                android:minWidth="64dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="00"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtObsListItem_yTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="Y"
                android:textAllCaps="true"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtObsListItem_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_obstacle_value"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                android:minWidth="64dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="00"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
